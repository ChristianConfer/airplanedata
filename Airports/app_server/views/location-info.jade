extends layout

include _includes/sharedHTMLfunctions

block content
  .row.page-header: .col-lg-12
      h1= pageHeader.title
  .row
    .col-xs-12.col-md-9
      .row
        .col-xs-12.col-sm-6
          p.rating
          p= location.address
          .panel.panel-primary
            .panel-heading
              h2.panel-title Opening hours
            .panel-body
              each time in location.runways
                p
                  | #{time.runway} : 
                  if time.closed
                    | closed
                  else
                    | #{time.runwayHeadingMagnetic} - #{time.runwayHeadingTrue}
          .panel.panel-primary
            .panel-heading
              h2.panel-title Facilities
            .panel-body
        .col-xs-12.col-sm-6.location-map
          .panel.panel-primary
            .panel-heading
              h2.panel-title Location map
            .panel-body
      .row
        .col-xs-12
          .panel.panel-primary.review-panel
            .panel-heading
              a.btn.btn-default.pull-right(href="/location/#{location._id}/review/new") Add review
              h2.panel-title Customer reviews
            .panel-body.review-container
    .col-xs-12.col-md-3
      p.lead #{sidebar.context}
      p= sidebar.callToAction